<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.VerificationApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <!-- The colour below will edit the top nav bar colour, buttons and bottom nav bar selection -->
        <item name="colorPrimary">@color/Red</item>

        <!-- The colour below will edit the top display where the clock and battery life displays -->
        <item name="colorPrimaryVariant">@color/Red</item>

        <!-- The colour below will edit the text colour of the buttons -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->

        <!-- The colour below will edit the hyperlinked colour and display -->
        <item name="colorSecondary">@color/teal_200</item>


        <item name="colorSecondaryVariant">@color/teal_700</item>


        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

</resources>